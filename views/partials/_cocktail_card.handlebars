<div class="card h-100 cocktail-card" style="border: 1px solid var(--gold-dark); background-color: rgba(10, 10, 10, 0.7);">
  <img src="/images/cocktails/{{image}}" class="card-img-top cocktail-img" alt="{{name}}">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-center mb-2">
      <span class="badge" style="background-color: var(--gold); color: var(--darker-color);">{{category}}</span>
      <div class="rating">
        <i class="fas fa-star" style="color: var(--gold);"></i>
        <span style="color: var(--cream);">{{averageRating}}</span>
      </div>
    </div>
    <h5 class="card-title" style="color: var(--gold); font-family: 'Playfair Display', serif;">{{name}}</h5>
    <p class="card-text" style="color: var(--text-color); font-size: 0.9rem;">{{truncate description 80}}</p>
  </div>
  <div class="card-footer pt-0" style="background-color: rgba(10, 10, 10, 0.7); border-top: 1px solid var(--gold-dark);">
    <div class="d-flex justify-content-between align-items-center">
      <small style="color: var(--cream);">
        <img src="/images/avatars/{{user.avatar}}" alt="{{user.name}}" class="rounded-circle me-1" width="20" height="20" style="border: 1px solid var(--gold-dark);">
        {{user.name}}
      </small>
      <div class="btn-group">
        <a href="/cocktails/{{_id}}" class="btn btn-sm" style="border: 1px solid var(--gold); color: var(--gold); background-color: transparent; font-family: 'Montserrat', sans-serif; letter-spacing: 0.5px; font-size: 0.8rem;">VIEW RECIPE</a>
        {{#if (eq user._id ../user._id)}}
        <a href="/cocktails/delete/{{_id}}" class="btn btn-sm delete-link" style="border: 1px solid #dc3545; color: #dc3545; background-color: transparent; font-family: 'Montserrat', sans-serif; letter-spacing: 0.5px; font-size: 0.8rem;">DELETE</a>
        {{/if}}
      </div>
    </div>
  </div>
</div>
