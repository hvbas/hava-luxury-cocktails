<!-- Profile Header -->
<div class="profile-header mb-4" style="background-color: rgba(10, 10, 10, 0.8); border-bottom: 1px solid var(--gold-dark);">
  <div class="container py-5">
    <div class="row align-items-center">
      <div class="col-md-3 text-center mb-3 mb-md-0">
        <div class="custom-avatar-container mx-auto" style="width: 120px; height: 120px;">
          <i class="fas fa-glass-martini-alt" style="font-size: 3rem;"></i>
        </div>
      </div>
      <div class="col-md-9">
        <h1 class="fw-bold mb-2" style="color: var(--gold); font-family: 'Playfair Display', serif;">{{user.name}}</h1>
        <p class="mb-3" style="color: var(--cream);"><i class="fas fa-envelope me-2" style="color: var(--gold);"></i>{{user.email}}</p>
        <p class="mb-3" style="color: var(--cream);"><i class="fas fa-calendar-alt me-2" style="color: var(--gold);"></i>Member Since: {{formatDate user.createdAt "MMMM Do YYYY"}}</p>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <!-- Profile Information -->
    <div class="col-lg-8">
      <div class="card" style="border: 1px solid var(--gold-dark); background-color: rgba(15, 15, 15, 0.8);" data-aos="fade-up" data-aos-duration="1000">
        <div class="card-header py-3" style="background-color: rgba(25, 25, 25, 0.8); border-bottom: 1px solid var(--gold-dark);">
          <h4 class="mb-0" style="font-family: 'Playfair Display', serif; color: var(--gold);"><i class="fas fa-user-edit me-2" style="color: var(--gold);"></i>My Profile</h4>
        </div>
        <div class="card-body p-4">
          <form action="/users/profile?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="name" class="form-label" style="color: var(--gold); letter-spacing: 1px; font-size: 0.9rem;">Full Name</label>
              <input type="text" class="form-control" id="name" name="name" value="{{user.name}}" required style="background-color: rgba(30, 30, 30, 0.8); border: 1px solid var(--gold-dark); color: var(--cream); height: 45px;">
            </div>
            <div class="mb-3">
              <label for="email" class="form-label" style="color: var(--gold); letter-spacing: 1px; font-size: 0.9rem;">Email Address</label>
              <input type="email" class="form-control" id="email" name="email" value="{{user.email}}" required style="background-color: rgba(30, 30, 30, 0.8); border: 1px solid var(--gold-dark); color: var(--cream); height: 45px;">
            </div>
            <div class="mb-4">
              <label for="avatar" class="form-label" style="color: var(--gold); letter-spacing: 1px; font-size: 0.9rem;">Profile Photo</label>
              <input type="file" class="form-control" id="avatar" name="avatar" accept="image/*" style="background-color: rgba(30, 30, 30, 0.8); border: 1px solid var(--gold-dark); color: var(--cream);">
              <div class="form-text" style="color: var(--cream); opacity: 0.7;">Current photo: {{user.avatar}}. If you don't upload a new photo, the current one will be kept.</div>
            </div>
            <button type="submit" class="btn" style="background: linear-gradient(to right, var(--gold), var(--gold-dark)); color: var(--dark); font-family: 'Montserrat', sans-serif; font-weight: 500; padding: 10px 25px; border: none; transition: all 0.3s ease;">
              <i class="fas fa-save me-2"></i>Save Changes
            </button>
          </form>
        </div>
      </div>
      
      <!-- Password Change -->
      <div class="card" style="border: 1px solid var(--gold-dark); background-color: rgba(15, 15, 15, 0.8);" data-aos="fade-up" data-aos-duration="1000">
        <div class="card-header py-3" style="background-color: rgba(25, 25, 25, 0.8); border-bottom: 1px solid var(--gold-dark);">
          <h4 class="mb-0" style="font-family: 'Playfair Display', serif; color: var(--gold);"><i class="fas fa-lock me-2" style="color: var(--gold);"></i>Change Password</h4>
        </div>
        <div class="card-body p-4">
          <form action="/users/change-password?_method=PUT" method="POST">
            <div class="mb-3">
              <label for="currentPassword" class="form-label">Current Password</label>
              <input type="password" class="form-control" id="currentPassword" name="currentPassword" required>
            </div>
            <div class="mb-3">
              <label for="newPassword" class="form-label">New Password</label>
              <input type="password" class="form-control" id="newPassword" name="newPassword" required>
            </div>
            <div class="mb-4">
              <label for="confirmPassword" class="form-label">Confirm New Password</label>
              <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
            </div>
            <button type="submit" class="btn btn-primary">
              <i class="fas fa-key me-2"></i>Change Password
            </button>
          </form>
        </div>
      </div>
    </div>
    
    <!-- Profile Stats -->
    <div class="col-lg-4">
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white py-3">
          <h4 class="mb-0"><i class="fas fa-chart-pie me-2"></i>My Statistics</h4>
        </div>
        <div class="card-body p-0">
          <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
              <div>
                <i class="fas fa-glass-martini-alt me-2 text-primary"></i>
                My Recipes
              </div>
              <span class="badge bg-primary rounded-pill">{{user.recipeCount}}</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
              <div>
                <i class="fas fa-heart me-2 text-danger"></i>
                My Favorites
              </div>
              <span class="badge bg-danger rounded-pill">{{user.favorites.length}}</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
              <div>
                <i class="fas fa-star me-2 text-warning"></i>
                My Ratings
              </div>
              <span class="badge bg-warning text-dark rounded-pill">{{user.ratingCount}}</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
              <div>
                <i class="fas fa-comment me-2 text-info"></i>
                My Comments
              </div>
              <span class="badge bg-info rounded-pill">{{user.commentCount}}</span>
            </li>
          </ul>
        </div>
      </div>
      
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
          <h4 class="mb-0"><i class="fas fa-link me-2"></i>Quick Links</h4>
        </div>
        <div class="card-body p-0">
          <div class="list-group list-group-flush">
            <a href="/dashboard" class="list-group-item list-group-item-action p-3">
              <i class="fas fa-tachometer-alt me-2 text-primary"></i>
              Dashboard
            </a>
            <a href="/users/favorites" class="list-group-item list-group-item-action p-3">
              <i class="fas fa-heart me-2 text-danger"></i>
              My Favorites
            </a>
            <a href="/cocktails/add" class="list-group-item list-group-item-action p-3">
              <i class="fas fa-plus me-2 text-success"></i>
              Add New Recipe
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
