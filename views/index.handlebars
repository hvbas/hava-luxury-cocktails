<!-- Hero Section -->
<section class="hero-section position-relative">
  <div class="hero-overlay"></div>
  <!-- Animated cocktail elements -->
  <div id="cocktail-animation-container" class="position-absolute w-100 h-100 overflow-hidden" style="top: 0; left: 0; pointer-events: none;"></div>
  <div class="container py-5 position-relative text-white text-center" data-aos="fade-up" data-aos-duration="1200">
    <div class="row py-5">
      <div class="col-lg-8 mx-auto text-center text-white" data-aos="fade-up" data-aos-delay="200">
        <div class="mb-4" style="border-bottom: 2px solid var(--gold); width: 80px; margin: 0 auto;"></div>
        <h1 class="display-4 fw-bold mb-3" style="font-family: 'Playfair Display', serif; letter-spacing: 1px;">
          <span style="background: linear-gradient(to right, var(--gold), var(--cream)); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">Luxury Cocktail</span> Collection
        </h1>
        <p class="lead mb-4" style="font-weight: 300; letter-spacing: 0.5px;">Discover exquisite cocktail recipes, curated for the most refined tastes.</p>
        <div class="d-flex justify-content-center gap-3">
          <a href="/cocktails" class="btn btn-primary btn-lg" style="border-radius: 0; padding: 12px 30px; letter-spacing: 1px;">EXPLORE COLLECTION</a>
          {{#if user}}
          <a href="/cocktails/add" class="btn btn-outline-light btn-lg" style="border: 1px solid var(--gold); border-radius: 0; padding: 12px 30px; letter-spacing: 1px;">ADD RECIPE</a>
          {{else}}
          <a href="/users/register" class="btn btn-outline-light btn-lg" style="border: 1px solid var(--gold); border-radius: 0; padding: 12px 30px; letter-spacing: 1px;">JOIN NOW</a>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Categories Section -->
<section class="py-5" style="background-color: var(--darker-color); border-top: 1px solid var(--gold-dark); border-bottom: 1px solid var(--gold-dark);">
  <div class="container">
    <div class="row">
      <div class="col-12 text-center mb-5" data-aos="fade-up">
        <div class="mb-3" style="border-bottom: 2px solid var(--gold); width: 50px; margin: 0 auto;"></div>
        <h2 class="fw-bold" style="font-family: 'Playfair Display', serif; letter-spacing: 1px; color: var(--gold);">Exquisite Categories</h2>
        <p style="color: var(--text-color);">Select your preferred spirit for a perfect cocktail experience</p>
      </div>
    </div>
    <div class="row g-4">
      <div class="col-6 col-md-3" data-aos="fade-up" data-aos-delay="100">
        <a href="/cocktails?category=Non-Alcoholic" class="text-decoration-none">
          <div class="card category-card h-100" style="border: 1px solid var(--gold-dark); background-color: rgba(10, 10, 10, 0.7);">
            <div class="card-body text-center">
              <div class="category-icon mb-3">
                <i class="fas fa-glass-water fa-3x" style="color: var(--gold);"></i>
              </div>
              <h5 class="card-title" style="color: var(--cream);">Non-Alcoholic</h5>
            </div>
          </div>
        </a>
      </div>
      <div class="col-6 col-md-3" data-aos="fade-up" data-aos-delay="200">
        <a href="/cocktails?category=Vodka" class="text-decoration-none">
          <div class="card category-card h-100" style="border: 1px solid var(--gold-dark); background-color: rgba(10, 10, 10, 0.7);">
            <div class="card-body text-center">
              <div class="category-icon mb-3">
                <i class="fas fa-martini-glass fa-3x" style="color: var(--gold);"></i>
              </div>
              <h5 class="card-title" style="color: var(--cream);">Vodka</h5>
            </div>
          </div>
        </a>
      </div>
      <div class="col-6 col-md-3" data-aos="fade-up" data-aos-delay="300">
        <a href="/cocktails?category=Gin" class="text-decoration-none">
          <div class="card category-card h-100" style="border: 1px solid var(--gold-dark); background-color: rgba(10, 10, 10, 0.7);">
            <div class="card-body text-center">
              <div class="category-icon mb-3">
                <i class="fas fa-martini-glass-citrus fa-3x" style="color: var(--gold);"></i>
              </div>
              <h5 class="card-title" style="color: var(--cream);">Gin</h5>
            </div>
          </div>
        </a>
      </div>
      <div class="col-6 col-md-3" data-aos="fade-up" data-aos-delay="400">
        <a href="/cocktails?category=Rum" class="text-decoration-none">
          <div class="card category-card h-100" style="border: 1px solid var(--gold-dark); background-color: rgba(10, 10, 10, 0.7);">
            <div class="card-body text-center">
              <div class="category-icon mb-3">
                <i class="fas fa-cocktail fa-3x" style="color: var(--gold);"></i>
              </div>
              <h5 class="card-title" style="color: var(--cream);">Rum</h5>
            </div>
          </div>
        </a>
      </div>
    </div>
  </div>
</section>

<!-- Featured Cocktails Section -->
<section class="py-5" style="background: linear-gradient(to bottom, var(--dark-color), var(--darker-color));">
  <div class="container">
    <div class="row">
      <div class="col-12 text-center mb-5" data-aos="fade-up">
        <div class="mb-3" style="border-bottom: 2px solid var(--gold); width: 50px; margin: 0 auto;"></div>
        <h2 class="fw-bold" style="font-family: 'Playfair Display', serif; letter-spacing: 1px; color: var(--gold);">Signature Collection</h2>
        <p style="color: var(--text-color);">Our most celebrated cocktail creations</p>
      </div>
    </div>
    
    {{#if user}}
      {{#if topRated.length}}
      <div class="row g-4">
        {{#each topRated}}
        <div class="col-md-6 col-lg-3" data-aos="fade-up" data-aos-delay="{{@index}}00">
          <div class="card h-100 cocktail-card" style="border: 1px solid var(--gold-dark); background-color: rgba(10, 10, 10, 0.7);">
            <img src="/images/cocktails/{{image}}" class="card-img-top cocktail-img" alt="{{name}}">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="badge" style="background-color: var(--gold); color: var(--darker-color);">{{category}}</span>
                <div class="rating">
                  <i class="fas fa-star" style="color: var(--gold);"></i>
                  <span style="color: var(--cream);">{{averageRating}}</span>
                </div>
              </div>
              <h5 class="card-title" style="color: var(--gold); font-family: 'Playfair Display', serif;">{{name}}</h5>
              <p class="card-text" style="color: var(--text-color); font-size: 0.9rem;">{{truncate description 80}}</p>
            </div>
            <div class="card-footer pt-0" style="background-color: rgba(10, 10, 10, 0.7); border-top: 1px solid var(--gold-dark);">
              <div class="d-flex justify-content-between align-items-center">
                <small style="color: var(--cream);">
                  <img src="/images/avatars/{{user.avatar}}" alt="{{user.name}}" class="rounded-circle me-1" width="20" height="20" style="border: 1px solid var(--gold-dark);">
                  {{user.name}}
                </small>
              </div>
              <div class="d-flex mt-2">
                <a href="/cocktails/{{_id}}" class="btn btn-sm me-2" style="background-color: var(--gold); color: var(--darker-color); font-family: 'Montserrat', sans-serif; letter-spacing: 0.5px; font-size: 0.8rem; flex: 1;">VIEW RECIPE</a>
                {{#if (eq user._id ../user._id)}}
                <a href="/cocktails/delete/{{_id}}" class="btn btn-sm delete-link" style="background-color: #dc3545; color: white; font-family: 'Montserrat', sans-serif; letter-spacing: 0.5px; font-size: 0.8rem; flex: 1;" onclick="return confirm('Are you sure you want to delete this recipe?')">DELETE</a>
                {{/if}}
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
      {{else}}
      <div class="text-center py-5">
        <p style="color: var(--gold);">No recipes have been added yet.</p>
      </div>
      {{/if}}
    {{else}}
      <!-- Content for non-logged in users -->
      <div class="row justify-content-center">
        <div class="col-md-8 text-center">
          <div class="p-4" style="border: 1px solid var(--gold-dark); background-color: rgba(10, 10, 10, 0.7);">
            <i class="fas fa-cocktail fa-3x mb-3" style="color: var(--gold);"></i>
            <h4 style="color: var(--gold); font-family: 'Playfair Display', serif;">Discover Premium Cocktail Recipes</h4>
            <p style="color: var(--cream);">Login or register to view our exclusive collection of luxury cocktail recipes.</p>
            <div class="mt-4">
              <a href="/users/login" class="btn me-2" style="background-color: var(--gold); color: var(--darker-color); font-weight: 500;">LOGIN</a>
              <a href="/users/register" class="btn" style="border: 1px solid var(--gold); color: var(--gold);">REGISTER</a>
            </div>
          </div>
        </div>
      </div>
    {{/if}}
    
    {{#if user}}
    <div class="text-center mt-4">
      <a href="/cocktails" class="btn" style="border: 1px solid var(--gold); color: var(--gold); padding: 10px 25px; letter-spacing: 1px;">EXPLORE FULL COLLECTION</a>
    </div>
    {{/if}}
  </div>
</section>

